{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "CommonJS",
    "allowJs": true,
    "pretty": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build_src",
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./*.js",
    "./*.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
